extends layout

block content
  h1 Create a new request

  form(method="post")
    fieldset.form-group
      label.control-label(for='sitename') Sites
        select#sitename.form-control(name='sitename')
          each site in sites
            option #{site.sitename}
      br
      label(for="requestdescription") Description:
      input.form-control(name="requestdescription", type="text", placeholder="Description of service requested")
    button.btn.btn-primary(type="submit") Create request
    a.btn.btn-default(href="/request") Cancel

